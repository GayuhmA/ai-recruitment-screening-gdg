generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CvStatus {
  UPLOADED
  TEXT_EXTRACTED
  AI_DONE
  FAILED
}

enum CvFailReason {
  S3_UPLOAD_FAILED
  PDF_PARSE_FAILED
  PDF_TEXT_EMPTY
  AI_QUOTA_EXCEEDED
  AI_RATE_LIMITED
  AI_AUTH_FAILED
  AI_TIMEOUT
  AI_FAILED
  DB_FAILED
  UNKNOWN
}

enum AiOutputType {
  SUMMARY
  SKILLS
  CV_PROFILE
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  users     User[]
  jobs      Job[]
  candidates CandidateProfile[]
}

model User {
  id             String   @id @default(uuid())
  organizationId String
  fullName       String
  email          String   @unique
  passwordHash   String
  role           String   @default("recruiter")
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id])
}

model Job {
  id             String   @id @default(uuid())
  organizationId String
  title          String
  department     String?  // Department/team for the job
  location       String?  // Job location
  employmentType String?  // FULL_TIME, PART_TIME, CONTRACT, etc.
  status         String   @default("OPEN") // OPEN, CLOSED, DRAFT
  description    String
  requirements   Json?    // optional structured requirements later
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id])
  applications Application[]
  matches      JobCandidateMatch[]

  @@index([organizationId])
  @@index([status])
}

model CandidateProfile {
  id             String   @id @default(uuid())
  organizationId String
  fullName       String
  email          String?
  phone          String?
  createdAt      DateTime @default(now())

  organization Organization @relation(fields: [organizationId], references: [id])
  applications Application[]
  matches      JobCandidateMatch[]

  @@index([organizationId])
}

model Application {
  id               String   @id @default(uuid())
  jobId            String
  candidateProfileId String
  status           String   @default("APPLIED") // APPLIED/SHORTLISTED/REJECTED
  createdAt        DateTime @default(now())

  job       Job @relation(fields: [jobId], references: [id])
  candidate CandidateProfile @relation(fields: [candidateProfileId], references: [id])
  cvDocuments CvDocument[]

  @@unique([jobId, candidateProfileId])
  @@index([jobId])
}

model CvDocument {
  id            String        @id @default(uuid())
  applicationId String
  storageKey    String        // path/key in S3/MinIO
  mimeType      String
  checksum      String?
  status        CvStatus      @default(UPLOADED)
  extractedText String?
  errorMessage  String?
  failReason    CvFailReason?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  application Application @relation(fields: [applicationId], references: [id])
  aiOutputs   AiOutput[]

  @@index([applicationId])
  @@index([status])
}

model AiOutput {
  id           String       @id @default(uuid())
  cvDocumentId String
  type         AiOutputType
  outputJson   Json
  modelMeta    Json?
  inputHash    String?
  createdAt    DateTime     @default(now())

  cvDocument CvDocument @relation(fields: [cvDocumentId], references: [id])

  @@index([cvDocumentId])
  @@index([type])
}

model JobCandidateMatch {
  id              String   @id @default(uuid())
  jobId           String
  candidateProfileId String
  score           Int      @default(0) // 0-100
  matchedSkills   Json?    // string[]
  missingSkills   Json?    // string[]
  explanation     String?
  aiExplanation   String?  // AI-generated matching explanation
  updatedAt       DateTime @updatedAt

  job       Job @relation(fields: [jobId], references: [id])
  candidate CandidateProfile @relation(fields: [candidateProfileId], references: [id])

  @@unique([jobId, candidateProfileId])
  @@index([jobId, score])
}
