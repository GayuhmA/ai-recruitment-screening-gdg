# ===== ENVIRONMENT =====
NODE_ENV=development
PORT=3000
APP_PORT=3000

# ===== DATABASE =====
# Development: gunakan localhost karena tidak di Docker
# Production: gunakan 'postgres' (nama service di docker-compose.yml)
DATABASE_URL=postgresql://app:app@localhost:5432/ai_recruitment

# ===== REDIS =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ===== MinIO / S3 =====
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minio
S3_SECRET_ACCESS_KEY=minio12345
S3_BUCKET=cv-docs
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# ===== JWT SECRET =====
JWT_SECRET=development_jwt_secret_key

# ===== GOOGLE AI (Gemini) =====
GEMINI_API_KEY=your_gemini_api_key_here

# ===== FRONTEND URL =====
FRONTEND_URL=http://localhost:3000

# ===== OPTIONAL: Google OAuth =====
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback
